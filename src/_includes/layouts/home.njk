---
layout: base
---
{%- from "components/authorCard.njk" import authorCard -%}
<main class="home_page">
  {{ content | safe }}
  {%- for a in authors -%}
    {% if a.name === "Harvey Ramer"%}
      {{authorCard(a, "h1")}}
    {% endif %}
  {%- endfor -%}
  <ol class="archive_list">
    {%- for post in collections.articles.slice(0, 3) -%}
      <li>
        <h2>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        <span class="meta">{{ post.data.author }},
          <time class="block" datetime="{{ post.data.date | w3DateFilter  }}">
            {{ post.data.date | dateDisplay }}
          </time> â€” <span class="tags">
            {%- for tag in post.data.tags -%}
              <a href="/tags/{{tag}}">{{tag | upper}}</a>
            {%- endfor -%}
          </span>
        </span>
      </li>
    {% endfor %}
  </ol>
</main>